{
  "name": "osury",
  "type": "module",
  "description": "Generate ReScript types with Sury schemas from OpenAPI specifications",
  "version": "0.9.0",
  "license": "MIT",
  "bin": {
    "osury": "./bin/osury.mjs"
  },
  "files": [
    "bin/",
    "src/Codegen.res.mjs",
    "src/Errors.res.mjs",
    "src/OpenAPIParser.res.mjs",
    "src/Schema.res.mjs",
    "src/Schema.gen.tsx",
    "README.md"
  ],
  "scripts": {
    "res:clean": "rescript clean",
    "res:build": "rescript",
    "res:dev": "rescript watch",
    "codegen": "node scripts/codegen.mjs",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run res:build && npm test"
  },
  "devDependencies": {
    "@rescript/core": "^1.6.1",
    "gentype": "^4.5.0",
    "jest": "^30.2.0",
    "rescript": "^12.1.0",
    "sury": "^11.0.0-alpha.4",
    "sury-ppx": "^11.0.0-alpha.2"
  },
  "peerDependencies": {
    "sury": ">=11.0.0-alpha.4",
    "sury-ppx": ">=11.0.0-alpha.2"
  },
  "peerDependenciesMeta": {
    "sury": {
      "optional": true
    },
    "sury-ppx": {
      "optional": true
    }
  },
  "keywords": [
    "openapi",
    "rescript",
    "codegen",
    "sury",
    "schema",
    "typescript",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/greenteamer/osury"
  }
}
